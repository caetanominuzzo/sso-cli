# SSO Config - Copy to ~/sso_config.yaml
# Passwords stored in system keyring

environments:
  prod:
    sso_url: https://sso.example.com
    realm: Production
    client_id: my-client-id  # optional
  staging:
    sso_url: https://sso-staging.example.com
    realm: Staging

users:
  prod:
    user@example.com:
      auth_type: password
      email: user@example.com
    api-client:
      auth_type: client_credentials
      client_id: api-client
  staging:
    test@example.com:
      auth_type: password
      email: test@example.com
